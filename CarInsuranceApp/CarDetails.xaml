<Page
    x:Class="CarInsuranceApp.CarDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarInsuranceApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White" Loaded="Page_Loaded">
    <Page.Resources>
        <Style x:Key="tbkPageTitles" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"
/>
        </Style>
        <Style x:Key="tbkHeadings" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="FontFamily" Value="BatangChe"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="cmbDropdowns" TargetType="ComboBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="BorderBrush" Value="#FF424141"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="btnNext" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <!--<Setter Property="Height" Value="60"/>-->
            <Setter Property="Background" Value="#FF0E9900"/>
            <Setter Property="FontFamily" Value="BatangChe"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

    </Page.Resources>
    <Grid>
        
        <StackPanel>            
            <ProgressBar Name="pgbCarDets" Width="200" Height="5"
              Foreground="LightGreen" Background="Gray" Margin="20"/>
            <Border Width="250" HorizontalAlignment="Center" Background="#FF3F59FF"
                    CornerRadius="15">
                <TextBlock Style="{StaticResource tbkPageTitles}" >  
                   <Run Text="Car Details"/>
                    <LineBreak/>
                    <Run Text="Enter your car registration below"/>
                </TextBlock>
            </Border>
            <StackPanel Orientation="Horizontal" Margin="20,50,0,50">
            <TextBox Name="tbxCarReg" Width="160" Height="40"
                     HorizontalAlignment="Left" BorderThickness="2"
                     BorderBrush="Gray" Margin="20,10,0,0" 
                     PlaceholderText="Car Registration"/>

            <Button Name="btnGetCarDets" Content="Get Car Details"
                    Background="Aquamarine" Margin="10,-2,0,0"
                    HorizontalAlignment="Right" Width="155" 
                    Height="65" Click="btnGetCarDets_Click"
                    />
                
            </StackPanel>
            <StackPanel Name="stkConfirmCarDets" Visibility="Collapsed">
            <TextBlock Style="{StaticResource tbkHeadings}"
                       Text="Are these details correct?"
                       Width="300"/>
            <Border Width="320" Height="200" BorderThickness="2"
                    BorderBrush="Gray" CornerRadius="4">
            <TextBlock Name="tbkDisplayDets" Width="320"
                       Height="200"/>
            </Border>
            <StackPanel Orientation="Horizontal" Margin="0,20">
                <Button Name="btnInputCarDetsMnly" HorizontalAlignment="Left"
               Content="No, Input Details Manually"
               Background="Red" Margin="20,0,10,0"/>
            <Button Name="btnConfirmDets" Style="{StaticResource btnNext}"
                    Margin="0,0,0,0" Content="Yes"
                    VerticalContentAlignment="Center"/>
            
            </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
